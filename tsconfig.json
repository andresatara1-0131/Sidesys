{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./build",
    "rootDir": "./",
    "strict": false,  // ✅ Cambiado a false temporalmente
    "esModuleInterop": true,
    "skipLibCheck": true,  // ✅ Added to skip lib checks
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": false,  // ✅ Simplified
    "sourceMap": true,
    "types": ["@playwright/test"]  // ✅ Added Playwright types
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "test-results",
    "playwright-report"
  ]
}